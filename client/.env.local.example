# Clerk Authentication
# Get these from Clerk Dashboard > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key

# Clerk Routes Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/select-role

# API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Mapbox Configuration (for maps)
# Get this from Mapbox Dashboard > Access tokens
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Pusher Configuration (for real-time features)
# Get these from Pusher Dashboard > Your App > App Keys
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# Stripe Configuration (for payments)
# Get this from Stripe Dashboard > Developers > API keys > Publishable key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
